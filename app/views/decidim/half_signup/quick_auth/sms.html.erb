<div class="content">
  <div class="wraper">
    <div class="row collapse">
      <div class="columns large-8 large-centered text-center page-title margin-top-3">
        <h1><%= t(".title") %></h1>
        <%= render partial: "instructions", locals: { method: "phone" } %>
      </div>
      <div class="row">
        <div class="columns large-6 medium-centered" id="select-wrapper">
          <div class="card">
            <div class="card__content">
              <%= decidim_form_for(@form, url: users_quick_auth_verification_path, method: :post) do |form| %>
                <%= render partial: "phone_form", locals: { form: form } %>
              <% end %>
              <p class="text-center">
                <%= link_to t(".another_method"), decidim_half_signup.users_quick_auth_path, class: "text-center" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
